{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node", // Changed to node
    "emitDecoratorMetadata": true, // Ensure true
    "experimentalDecorators": true, // Ensure true
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs", // Changed to commonjs
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@vinylplatz/entities": ["libs/shared/entities/src/index.ts"],
      "@vinylplatz/web-auth": ["libs/vinylplatz-web/auth/src/index.ts"]
    },
    "esModuleInterop": true, // Often needed with commonjs
    "allowSyntheticDefaultImports": true // Often needed with commonjs
  },
  "exclude": ["node_modules", "tmp"]
}
